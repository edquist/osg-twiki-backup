#!/bin/bash

# Put OSG job variables into the environment
for line in `cat /var/lib/osg/osg-job-environment.conf | grep '='`;
do
  cleaned=`echo $line | perl -pe 's/\"//g'`
  echo "export $cleaned"
done

user_dir=${X509_USER_PROXY%/*}/
touch $user_dir/stdout
touch $user_dir/stderr
echo `ls $user_dir` >> /tmp/user_dir

